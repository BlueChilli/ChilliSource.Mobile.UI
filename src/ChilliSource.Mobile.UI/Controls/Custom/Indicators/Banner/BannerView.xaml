<?xml version="1.0" encoding="UTF-8"?>
<pages:PopupPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
	xmlns:csmobileui="clr-namespace:ChilliSource.Mobile.UI;assembly=ChilliSource.Mobile.UI"
	x:Class="ChilliSource.Mobile.UI.BannerView">
	<StackLayout
		HorizontalOptions="FillAndExpand"
		VerticalOptions="{Binding MainVerticalOption}"
		BackgroundColor="{Binding Color}">
		<StackLayout
			Padding="20"
			Orientation="Horizontal"
			HorizontalOptions="CenterAndExpand"
			VerticalOptions="CenterAndExpand"
			BackgroundColor="{Binding Color}">
			<Image
				Source="{Binding Image}"
				IsVisible="{Binding ImageVisible}"
				HorizontalOptions="Center"
				Margin="0,0,5,0"
				Aspect="AspectFit" />
			<csmobileui:ExtendedLabel
				CustomFont="{Binding TitleFont}"
				Text="{Binding Text}"
				HorizontalOptions="CenterAndExpand"
				VerticalOptions="CenterAndExpand" />
		</StackLayout>
	</StackLayout>
</pages:PopupPage>