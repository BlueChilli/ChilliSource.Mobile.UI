<?xml version="1.0" encoding="UTF-8"?>
<csmobileui:ExtendedFrame
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:local="clr-namespace:Examples"
	xmlns:csmobileui="clr-namespace:ChilliSource.Mobile.UI;assembly=ChilliSource.Mobile.UI"
	x:Class="Examples.RootItemView"
	HorizontalOptions="FillAndExpand"
	VerticalOptions="FillAndExpand"
	CornerRadius="4"
	HasShadow="false"
	OutlineColor="{x:Static local:ThemeManager.LightGreyColor}"
	BackgroundColor="{Binding BackgroundColor}">
	<StackLayout
		HorizontalOptions="CenterAndExpand"
		VerticalOptions="CenterAndExpand"
		Spacing="0">
		<Image
			Source="{Binding Image}"
			HorizontalOptions="FillAndExpand"
			VerticalOptions="FillAndExpand" />
		<csmobileui:ExtendedLabel
			Text="{Binding Title}"
			CustomFont="{Binding CustomFont}"
			HorizontalOptions="FillAndExpand"
			VerticalOptions="FillAndExpand"
			HorizontalTextAlignment="Center" />
	</StackLayout>
</csmobileui:ExtendedFrame>