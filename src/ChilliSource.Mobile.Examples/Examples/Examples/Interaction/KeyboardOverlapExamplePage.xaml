<?xml version="1.0" encoding="UTF-8"?>
<csmobileui:KeyboardOverlapContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="Examples.KeyboardOverlapExamplePage"
	xmlns:local="clr-namespace:Examples"
	xmlns:csmobileui="clr-namespace:ChilliSource.Mobile.UI;assembly=ChilliSource.Mobile.UI"
	Title="Keyboard Overlap Page">
	<ContentPage.Content>
		<ScrollView
			HorizontalOptions="FillAndExpand"
			VerticalOptions="FillAndExpand">
			<StackLayout
				HorizontalOptions="FillAndExpand"
				VerticalOptions="CenterAndExpand">
				<csmobileui:ExtendedButton
					Text="Useless button 1"
					CustomFont="{x:Static local:ThemeManager.CellTitleFont}"
					BackgroundColor="Green" />
				<csmobileui:ExtendedButton
					Text="Useless button 2"
					CustomFont="{x:Static local:ThemeManager.CellTitleFont}"
					BackgroundColor="Green" />
				<csmobileui:ExtendedButton
					Text="Useless button 3"
					CustomFont="{x:Static local:ThemeManager.CellTitleFont}"
					BackgroundColor="Green" />
				<csmobileui:ExtendedEntry
					Placeholder="Tap here !"
					HeightRequest="200"
					CustomFont="{x:Static local:ThemeManager.AdvancedActionSheetTitleFont}"
					HasBorder="true"
					PlaceholderColor="Red" />
			</StackLayout>
		</ScrollView>
	</ContentPage.Content>
</csmobileui:KeyboardOverlapContentPage>