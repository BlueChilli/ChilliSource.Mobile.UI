<?xml version="1.0" encoding="UTF-8"?>
<local:GoogleExampleBasePage
	xmlns ="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="Examples.DirectionsExamplePage"
	xmlns:local="clr-namespace:Examples"
	xmlns:csmobileui="clr-namespace:ChilliSource.Mobile.UI;assembly=ChilliSource.Mobile.UI"
	Title="{Binding Item.Title}">
	<ContentPage.Content>
		<StackLayout Spacing="10">
			<csmobileui:ExtendedSearchBar
				x:Name="searchBar"
				BackgroundColor="{x:Static local:ThemeManager.GrayColor}"
				CancelButtonColor="Black"
				TextColor="Black"
				Placeholder="Enter Destination Address"
				KeyboardTheme="Dark"/>
			<StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
			<csmobileui:ExtendedButton
				HorizontalOptions="CenterAndExpand"
				Clicked="SearchPressed"
				Text="Search"/>
				<csmobileui:LoadingIndicatorView
				IsVisible="{Binding IndicatorVisible}"/>
				</StackLayout>
			<StackLayout 
				Spacing="5"
				IsVisible="{Binding ButtonsVisible}">
				<csmobileui:ExtendedButton
				Clicked="ShowDirectionsPressed"
				Text="Show Directions"/>
				<csmobileui:ExtendedButton
				Clicked="ShowInfoPressed"
				Text="Show Info"/>
			</StackLayout>
		</StackLayout>
	</ContentPage.Content>
</local:GoogleExampleBasePage>
