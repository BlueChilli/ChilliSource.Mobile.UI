<?xml version="1.0" encoding="UTF-8"?>
<local:BaseContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="Examples.IndicatorsExamplePage"
	xmlns:local="clr-namespace:Examples"
	xmlns:csmobileui="clr-namespace:ChilliSource.Mobile.UI;assembly=ChilliSource.Mobile.UI"
	Title="{Binding Item.Title}">
	<ContentPage.Content>
		<StackLayout
			x:Name="mainStack"
			HorizontalOptions="FillAndExpand"
			VerticalOptions="CenterAndExpand"
			Spacing="20">
			<csmobileui:ExtendedButton
				Text="Banner"
				CustomFont="{x:Static local:ThemeManager.CellTitleFont}"
				Command="{Binding BannerCommand}" />
			<csmobileui:ExtendedButton
				Text="HUD"
				CustomFont="{x:Static local:ThemeManager.CellTitleFont}"
				Command="{Binding HUD1Command}" />
			<csmobileui:ExtendedButton
				Text="Loading Spinner"
				CustomFont="{x:Static local:ThemeManager.CellTitleFont}"
				Command="{Binding HUD2Command}" />
		</StackLayout>
	</ContentPage.Content>
</local:BaseContentPage>