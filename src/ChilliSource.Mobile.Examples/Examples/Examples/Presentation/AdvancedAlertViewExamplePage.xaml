<?xml version="1.0" encoding="UTF-8"?>
<local:BaseContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="Examples.AdvancedAlertViewExamplePage"
	xmlns:local="clr-namespace:Examples"
	xmlns:csmobileui="clr-namespace:ChilliSource.Mobile.UI;assembly=ChilliSource.Mobile.UI"
	Title="Advanced Alert View">
	<ContentPage.Content>
		<StackLayout
			HorizontalOptions="FillAndExpand"
			VerticalOptions="CenterAndExpand">
			<csmobileui:ExtendedButton
				Text="Show Success"
				CustomFont="{x:Static local:ThemeManager.CellTitleFont}"
				Command="{Binding ShowSuccessCommand}" />
			<csmobileui:ExtendedButton
				Text="Show Negative"
				CustomFont="{x:Static local:ThemeManager.CellTitleFont}"
				Command="{Binding ShowNegativeCommand}" />
			<csmobileui:ExtendedButton
				Text="Show Info"
				CustomFont="{x:Static local:ThemeManager.CellTitleFont}"
				Command="{Binding ShowInfoCommand}" />
			<csmobileui:ExtendedButton
				Text="Show Custom"
				CustomFont="{x:Static local:ThemeManager.CellTitleFont}"
				Command="{Binding ShowCustomCommand}" />
			<csmobileui:ExtendedButton
				Text="Show Waiting"
				CustomFont="{x:Static local:ThemeManager.CellTitleFont}"
				Command="{Binding ShowWaitingCommand}" />
		</StackLayout>
	</ContentPage.Content>
</local:BaseContentPage>